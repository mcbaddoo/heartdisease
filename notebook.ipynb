{"metadata":{"language_info":{"codemirror_mode":"r","mimetype":"text/x-r-source","file_extension":".r","pygments_lexer":"r","version":"3.4.1","name":"R"},"kernelspec":{"language":"R","name":"ir","display_name":"R"}},"cells":[{"metadata":{"editable":false,"deletable":false,"tags":["context"],"run_control":{"frozen":true},"dc":{"key":"3"}},"cell_type":"code","execution_count":0,"source":"#Read dataset Cleveland_hd.csv into hd_data\nhd_data <- read.csv(\"datasets/Cleveland_hd.csv\")\n\n#Look at the first 5 rows of hd_data\nhead(hd_data, 5)"},{"metadata":{"editable":false,"deletable":false,"tags":["context"],"run_control":{"frozen":true},"dc":{"key":"10"}},"cell_type":"code","execution_count":0,"source":"#Load the tidyverse package\nlibrary(tidyverse)\n\n#Use the 'mutate' function from dplyr to recode data\nhd_data %>% mutate(hd = ifelse(class > 0, 1, 0))-> hd_data\n\n#Recode sex using mutate function and save as hd_data\nhd_data %>% mutate(sex = factor(sex, levels = 0:1, labels = c(\"Female\", \"Male\")))-> hd_data\n\n"},{"metadata":{"editable":false,"deletable":false,"tags":["context"],"run_control":{"frozen":true},"dc":{"key":"17"}},"cell_type":"code","execution_count":0,"source":"#Does sex have an effect? Using chi-squared test b/c it's a binary variable\nhd_sex <- chisq.test(hd_data$sex, hd_data$hd)\n\n#Does age have an effect? Age is continuous, so using a t-test here\nhd_age <- t.test(hd_data$age ~ hd_data$hd)\n\n#Does thalach have an effect?\nhd_heartrate <- t.test(hd_data$thalach ~ hd_data$hd)\n\n#Print results\nprint(hd_sex)\nprint(hd_age)\nprint(hd_heartrate)"},{"metadata":{"editable":false,"deletable":false,"tags":["context"],"run_control":{"frozen":true},"dc":{"key":"24"}},"cell_type":"code","execution_count":0,"source":"#Recode hd to be labeled\nhd_data %>% mutate(hd_labelled = ifelse(hd == 0, \"No disease\", \"Disease\")) -> hd_data\n\n# age vs hd\nggplot(data = hd_data, aes(x = hd_labelled, y = age)) + geom_boxplot()"},{"metadata":{"editable":false,"deletable":false,"tags":["context"],"run_control":{"frozen":true},"dc":{"key":"31"}},"cell_type":"code","execution_count":0,"source":"# sex vs hd\nggplot(data = hd_data, aes(x = hd_labelled, fill = sex)) + geom_bar(position = \"fill\") + ylab(\"Sex %\")"},{"metadata":{"editable":false,"deletable":false,"tags":["context"],"run_control":{"frozen":true},"dc":{"key":"38"}},"cell_type":"code","execution_count":0,"source":"# max heart rate vs hd\nggplot(data = hd_data, aes(x = hd_labelled, y = thalach)) + geom_boxplot()"},{"metadata":{"editable":false,"deletable":false,"tags":["context"],"run_control":{"frozen":true},"dc":{"key":"45"}},"cell_type":"code","execution_count":0,"source":"#Use glm function from base R and specify the family argument as binomial\nmodel <- glm(data = hd_data, hd ~ age + sex + thalach, family = \"binomial\" )\n\n#Extract model summary\nsummary(model)"},{"metadata":{"editable":false,"deletable":false,"tags":["context"],"run_control":{"frozen":true},"dc":{"key":"52"}},"cell_type":"code","execution_count":0,"source":"#Load broom package\nlibrary(broom)\n\n#Tidy up coefficient table\ntidy_m <- tidy(model)\ntidy_m\n\n#Calculate OR\ntidy_m$OR <- exp(tidy_m$estimate)\n\n#Calculate 95% CI and save as lower CI and upper CI\ntidy_m$lower_CI <- exp(tidy_m$estimate - 1.96 * tidy_m$std.error)\ntidy_m$upper_CI <- exp(tidy_m$estimate + 1.96 * tidy_m$std.error)\n\n#Display updated coefficient table\ntidy_m"},{"metadata":{"editable":false,"deletable":false,"tags":["context"],"run_control":{"frozen":true},"dc":{"key":"59"}},"cell_type":"code","execution_count":0,"source":"#Get predicted probability in dataset using the predict() function\npred_prob <- predict(model, hd_data, type=\"response\")\n\n#Create decision rule using probability 0.5 as cutoff and save the predicted decision into the main data frame\nhd_data$pred_hd <- ifelse(pred_prob >= 0.5, 1, 0)\n\n#Create newdata data frame to save a new case\nnewdata <- data.frame(age=45, sex=\"Female\", thalach=150)\n\n# Predict probability for this new case and print out predicted value\np_new <- predict(model, newdata, type=\"response\")\np_new"},{"metadata":{"editable":false,"deletable":false,"tags":["context"],"run_control":{"frozen":true},"dc":{"key":"66"}},"cell_type":"code","execution_count":0,"source":"#Load Metrics package\nlibrary(Metrics)\n\n#Calculate auc, accuracy, clasification error\nauc <- ....\naccuracy <- ....\nclassification_error <- ....\n\n#Print out metrics on screen\nprint(paste(\"AUC=\", auc))\nprint(paste(\"Accuracy=\", accuracy))\nprint(paste(\"Classification Error=\", classification_error))\n\n#Confusion matrix\ntable(....,...., dnn=c(....,....))}],"nbformat":4,"nbformat_minor":2}
